<!-- Include gmaps.js for Google Map -->
<script src="assets/js/vendor/gmaps.js"></script>

 {{#each this}}
	<script type="text/javascript">
	//Google Map - with support of gmaps.js
	var map;
	$(document).ready(function() {
	    map = new GMaps({
	        div: '#{{name}}',
	        lat: {{mapLat}},
	        lng: {{mapLong}},
	        scrollwheel: {{scrollwheel}},
	        panControl: {{panControl}},
	        zoomControl: {{zoomControl}},
	        zoom: {{zoom}},
	    });
	{{#each mapMarker}}
	    map.addMarker({
	        lat: {{marker.markerLat}},
	        lng: {{marker.markerLong}},
	        title: '{{marker.text}}',
	        infoWindow: {
	            content: '{{{marker.rawHTML}}}'
	        },
	        icon: "{{assets}}images/mapicon.png"
	    });
	{{/each}}
	});
	</script>
{{/each}}
